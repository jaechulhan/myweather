<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/imgWeatherState"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="35dp"
        android:src="@drawable/c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:hint="Date"
        android:textAlignment="gravity"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/imgWeatherState"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="right"
        android:hint="State"
        android:textAlignment="gravity"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txtDate"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <ImageView
        android:id="@+id/imgLow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/low"
        app:layout_constraintBottom_toBottomOf="@+id/txtMinTemp"
        app:layout_constraintStart_toStartOf="@+id/txtState"
        app:layout_constraintTop_toTopOf="@+id/txtMinTemp" />

    <TextView
        android:id="@+id/txtMinTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="left"
        android:hint="Min"
        android:textAlignment="gravity"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imgLow"
        app:layout_constraintTop_toBottomOf="@+id/txtState" />

    <ImageView
        android:id="@+id/imgHigh"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/high"
        app:layout_constraintBottom_toBottomOf="@+id/txtMaxTemp"
        app:layout_constraintStart_toStartOf="@+id/imgLow"
        app:layout_constraintTop_toTopOf="@+id/txtMaxTemp" />

    <TextView
        android:id="@+id/txtMaxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppinsmedium"
        android:gravity="right"
        android:hint="Max"
        android:textAlignment="gravity"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgHigh"
        app:layout_constraintTop_toBottomOf="@+id/txtMinTemp" />

</android.support.constraint.ConstraintLayout>